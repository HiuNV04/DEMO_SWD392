<Window x:Class="DEMO_SWD392.ViewDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO_SWD392"
        mc:Ignorable="d"
        Title="ViewDetailWindow" Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Product Detail" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="Name:"/>
                <TextBox x:Name="txtName" Width="200" Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="Barcode:"/>
                <TextBox x:Name="txtBarcode" Width="200" Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="Quantity:"/>
                <TextBox x:Name="txtQuantity" Width="200" Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="Price:"/>
                <TextBox x:Name="txtPrice" Width="200" Margin="10,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="100" Text="Category:"/>
                <ComboBox x:Name="cbCategory" Width="200" Margin="10,0"/>
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="1" Content="Save changes" 
                HorizontalAlignment="Right" Margin="0,51,135,112"
                Width="120" Click="SaveChanges_Click"/>
    </Grid>
</Window>
