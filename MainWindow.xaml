<Window x:Class="DEMO_SWD392.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="600"
        Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#2c3e50" VerticalAlignment="Stretch">
            <TextBlock Text="Admin Dashboard"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="16,20,0,32" />

            <Button Content="Account Management"
                    Margin="16,0,16,12"
                    Height="40"
                    Background="#34495e"
                    Foreground="White"
                    FontSize="15"
                    Click="ManageAccount_Click"/>

            <Button Content="Manage Product"
                    Margin="16,0,16,12"
                    Height="40"
                    Background="#34495e"
                    Foreground="White"
                    FontSize="15"
                    Click="ManageProduct_Click" />
        </StackPanel>

        <!-- Main content area -->
        <StackPanel Grid.Column="1" Margin="10">

            <!-- Hàng chứa nút Add + Search -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10" HorizontalAlignment="Left">
                <Button Content="Add New Product"
                        Width="160"
                        Height="36"
                        Background="#27ae60"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="AddProduct_Click" />

                <TextBox x:Name="txtSearch"
                         Width="300"
                         Height="30"
                         Margin="20,0,10,0"
                         VerticalAlignment="Center"
                         ToolTip="Search by name, barcode, or category" />

                <Button Content="Search"
                        Width="100"
                        Height="30"
                        Click="SearchProduct_Click"
                        Background="#2980b9"
                        Foreground="White"
                        FontWeight="Bold" />
            </StackPanel>

            <!-- DataGrid for products -->
            <DataGrid x:Name="dgProduct" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto" />
                    <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="*" />
                    <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="*" />
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="Auto" />
                    <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*" />
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Click="ViewProduct_Click"
                                            Margin="2"
                                            ToolTip="View">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8EF;" FontSize="16" />
                                    </Button>
                                    <Button Click="DeleteProduct_Click"
                                            Margin="2"
                                            ToolTip="Delete"
                                            CommandParameter="{Binding ProductId}">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="16" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- DataGrid for account list (UC08) -->
            <DataGrid x:Name="dgAccountList"
                      AutoGenerateColumns="False"
                      Visibility="Collapsed"
                      Margin="0,20,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="Auto" />
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*" />
                    <DataGridTextColumn Header="Full Name" Binding="{Binding AccountFullName}" Width="*" />
                    <DataGridTextColumn Header="Role" Binding="{Binding Role.RoleName}" Width="*" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Window>
