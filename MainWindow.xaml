            <!-- Hàng chứa nút Add + Search -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Left">
                <Button Content="Add New Product"
                        Width="160"
                        Height="36"
                        Background="#27ae60"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="AddProduct_Click"/>

                <TextBox x:Name="txtSearch"
                         Width="300"
                         Height="30"
                         Margin="20,0,10,0"
                         VerticalAlignment="Center"
                         ToolTip="Search by name, barcode, or category"/>

                <Button Content="Search"
                        Width="100"
                        Height="30"
                        Click="SearchProduct_Click"
                        Background="#2980b9"
                        Foreground="White"
                        FontWeight="Bold"/>
            </StackPanel>
            <DataGrid Grid.Column="1"
                      x:Name="dgProduct"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding ProductId}"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding ProductName}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Barcode"
                                        Binding="{Binding Barcode}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Quantity"
                                        Binding="{Binding Quantity}"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Price"
                                        Binding="{Binding Price}"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Category"
                                        Binding="{Binding Category}"
                                        Width="*"/>
                    <!-- Action column with icon buttons -->
                    <DataGridTemplateColumn Header="Actions"
                                            Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <!-- View Button -->
                                    <Button Click="ViewProduct_Click"
                                            Margin="2"
                                            ToolTip="View">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE8EF;"
                                                   FontSize="16"/>

                                    </Button>
                                    <!-- Delete Button -->
                                    <Button Click="DeleteProduct_Click"
                                            Margin="2"
                                            ToolTip="Delete"
                                            CommandParameter="{Binding ProductId}">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74D;"
                                                   FontSize="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!-- DataGrid quản lý tài khoản (UC08) -->
            <DataGrid x:Name="dgAccountList"
                      AutoGenerateColumns="False"
                      Visibility="Collapsed"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding UserId}"
                                        Width="Auto"/>
                    <DataGridTextColumn Header="Username"
                                        Binding="{Binding Username}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Full Name"
                                        Binding="{Binding AccountFullName}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Role"
                                        Binding="{Binding Role.RoleName}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
