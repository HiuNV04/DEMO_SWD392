<Window x:Class="DEMO_SWD392.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO_SWD392"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <!-- Sidebar width -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#2c3e50" VerticalAlignment="Stretch">
            <TextBlock Text="Admin Dashboard" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="16,20,0,32"/>
            <Button Content="Manage Account"
                    Margin="16,0,16,12"
                    Height="40"
                    Background="#34495e"
                    Foreground="White"
                    FontSize="15"/>
            <Button Content="Manage Product"
                    Margin="16,0,16,12"
                    Height="40"
                    Background="#34495e"
                    Foreground="White"
                    FontSize="15" Click="ManageProduct_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0">
            <!-- Nút Add New Product -->
            <Button Content="Add New Product"
            Width="160"
            Height="36"
            Margin="10,10,0,10"
            HorizontalAlignment="Left"
            Background="#27ae60"
            Foreground="White"
            FontWeight="Bold"
            FontSize="14"
            Click="AddProduct_Click"/>
            <DataGrid Grid.Column="1" x:Name="dgProduct" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="Auto"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                <!-- Action column with icon buttons -->
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- View Button -->
                                <Button Click="ViewProduct_Click"
                                Margin="2"
                                ToolTip="View"> 
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE8EF;"   
                                       FontSize="16"/>
                                        
                        </Button>
                                <!-- Delete Button -->
                                <Button Click="DeleteProduct_Click"
                                Margin="2"
                                ToolTip="Delete"
                                    CommandParameter="{Binding ProductId}">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE74D;"    
                                       FontSize="16"/>
                        </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Window>
