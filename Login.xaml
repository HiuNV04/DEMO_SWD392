<Window x:Class="DEMO_SWD392.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO_SWD392"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Username" Margin="20,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" Margin="20,61,20,0" VerticalAlignment="Top"/>

        <TextBlock Text="Password" Margin="20,84,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Margin="20,105,20,0" VerticalAlignment="Top"/>

        <Button Content="Login" Width="100" Height="40" Margin="20,128,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="LoginButton_Click" RenderTransformOrigin="0.507,0.039"/>

        
    </Grid>
</Window>
