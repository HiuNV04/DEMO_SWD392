<Window x:Class="DEMO_SWD392.ManageAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO_SWD392"
        mc:Ignorable="d"
        Title="ManageAccount" Height="450" Width="800">
    <Grid>

        <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" Margin="10,119,10,10" SelectionChanged="dgUsers_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" Width="Auto"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding RoleId}" Width="*"/>
                <!-- Add more columns as needed -->
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Search" HorizontalAlignment="Left" Margin="658,29,0,0" VerticalAlignment="Top" Width="75" Click="SearchButton_Click"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="519,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="111,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="pass" HorizontalAlignment="Left" Margin="111,84,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <Label Content="username" HorizontalAlignment="Left" Margin="28,11,0,0" VerticalAlignment="Top"/>
        <Label Content="pass" HorizontalAlignment="Left" Margin="28,76,0,0" VerticalAlignment="Top"/>
        <Button Content="Add Account" HorizontalAlignment="Left" Margin="257,50,0,0" VerticalAlignment="Top" Click="AddAccount_Click"/>
    </Grid>
</Window>
